var v = Number(prompt('Digite um numero'));
for(i=0; i<= v; i++){
    if(i % 2 ==0)
    document.write("<p style='background-color: purple;'>"+i+".</p>");
    else{
document.write("<p style='background-color: pink;'>"+i+"</p>");
    }
   // document.write('Valor atual' +i+'<br>');
}

